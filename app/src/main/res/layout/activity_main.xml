<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.daniele.drawapp.MainActivity">

    <com.example.daniele.drawapp.DrawView
        android:id="@+id/drawView"
        android:layout_width="303dp"
        android:layout_height="303dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/drawView"
        android:onClick="onButtonTap"
        android:text="Clear"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="159dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:text="5"
        android:textAlignment="center"
        android:textSize="100sp" />

    <Button
        android:id="@+id/buttontest"
        android:layout_width="81dp"
        android:layout_height="303dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/drawView"
        android:onClick="onButtonTapTest"
        android:text="Test!"
        android:visibility="visible" />

</RelativeLayout>